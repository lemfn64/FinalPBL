<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/info_icon"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_alignBottom="@+id/txt_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignBottom="@+id/txt_content" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_place"
        android:id="@+id/txt_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:maxLines="4"
        android:layout_alignStart="@+id/txt_title" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_title"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/info_icon"
        android:textSize="18dp"
        android:maxLines="1"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_time"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="10dp"
        android:maxLines="1"
        android:layout_above="@+id/txt_content"
        android:layout_toStartOf="@+id/imageView2" />

    <TextView
        android:text="Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="10dp"
        android:maxLines="1"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/txt_time"
        android:layout_alignBottom="@+id/txt_time"
        android:layout_toStartOf="@+id/txt_time" />

    <TextView
        android:text="Place:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="10dp"
        android:maxLines="1"
        android:id="@+id/textView8"
        android:layout_below="@+id/txt_title"
        android:layout_alignStart="@+id/txt_content" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_place"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="10dp"
        android:maxLines="1"
        android:layout_below="@+id/txt_title"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="10dp"
        android:maxLines="1"
        android:layout_above="@+id/txt_time"
        android:layout_toEndOf="@+id/textView4"
        android:id="@+id/date_txt" />

    <TextView
        android:text="Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="10dp"
        android:maxLines="1"
        android:id="@+id/textView9"
        android:layout_above="@+id/textView4"
        android:layout_toStartOf="@+id/txt_time" />

</RelativeLayout>